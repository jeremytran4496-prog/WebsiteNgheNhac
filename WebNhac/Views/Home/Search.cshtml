@model List<Song>
@{
    ViewData["Title"] = "Tìm kiếm";
}
<div class="container container-narrow py-4">
    <h5 class="mb-3">Kết quả cho: <b>@(ViewBag.Query ?? "")</b></h5>
    @if (Model.Count == 0)
    {
        <div class="alert alert-warning">Không tìm thấy bài hát phù hợp.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var s in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    @await Html.PartialAsync("_SongCard", s)
                </div>
            }
        </div>
    }
</div>
