<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebNhac</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebNhac.styles.css" asp-append-version="true" />

    <style>
        .song-card img {
            object-fit: cover;
            height: 160px
        }

        .song-title {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis
        }

        .container-narrow {
            max-width: 1200px
        }
    </style>



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
            <div class="container">
                <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-music-note-beamed"></i> Trang chủ
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mwNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mwNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Quản lý</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Songs" asp-action="Index">Bài hát</a></li>
                                <li><a class="dropdown-item" asp-controller="Artists" asp-action="Index">Ca sĩ</a></li>
                                <li><a class="dropdown-item" asp-controller="Albums" asp-action="Index">Album</a></li>
                                <li><a class="dropdown-item" asp-controller="Genres" asp-action="Index">Thể loại</a></li>
                                <li><a class="dropdown-item" asp-controller="Playlists" asp-action="Index">Danh sách phát</a></li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex" role="search" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control me-2" type="search" name="q" placeholder="Tìm bài hát / nghệ sĩ">
                        <button class="btn btn-primary" type="submit">Tìm</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top py-4 mt-5">
        <div class="container text-center text-muted">
            © @DateTime.Now.Year — Trang web nghe nhạc của Trần Khánh Hoàng
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
