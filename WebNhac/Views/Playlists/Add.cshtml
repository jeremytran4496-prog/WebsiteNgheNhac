@model AddToPlaylistViewModel
@{
    ViewData["Title"] = "Thêm vào playlist";
}

<div class="container container-narrow py-4">
    <h4 class="mb-3">Thêm bài hát vào playlist</h4>

    <form asp-action="Add" method="post">
        <input type="hidden" asp-for="SongId" />

        <div class="mb-3">
            <label class="form-label">Bài hát</label>
            <input class="form-control" value="@Model.SongTitle" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Playlist</label>
            <select asp-for="PlaylistId" class="form-select">
                @foreach (var p in Model.Playlists!)
                {
                    <option value="@p.Id">@p.Name (@p.Items.Count bài)</option>
                }
            </select>
            <span asp-validation-for="PlaylistId" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <button class="btn btn-primary" type="submit"><i class="bi bi-plus-lg"></i> Thêm</button>
        <a asp-controller="Songs" asp-action="Details" asp-route-id="@Model.SongId" class="btn btn-secondary">Quay lại</a>
    </form>
</div>

